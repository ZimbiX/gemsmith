require_relative "lib/<%= configuration.project_path %>/identity"

Gem::Specification.new do |spec|
  spec.name = <%= configuration.project_class %>::Identity::NAME
  spec.version = <%= configuration.project_class %>::Identity::VERSION
  spec.platform = Gem::Platform::RUBY
  spec.authors = ["<%= configuration.author_name %>"]
  spec.email = ["<%= configuration.author_email %>"]
  spec.homepage = "<%= configuration.documentation_url %>"
  spec.summary = <%= configuration.project_class %>::Identity::SUMMARY
  spec.license = <%= configuration.license_label_version %>

  spec.metadata = {
    "bug_tracker_uri" => "<%= 'configuration.project_issues_url' %>",
    "changelog_uri" => "<%= 'configuration.project_changes_url' %>",
    "documentation_uri" => "<%= 'configuration.project_documentation_url' %>",
    "rubygems_mfa_required" => "true",
    "source_code_uri" => "<%= 'configuration.project_source_url' %>"
  }

  <% if configuration.build_security %>
    spec.signing_key = Gem.default_key_path
    spec.cert_chain = [Gem.default_cert_path]
  <% end %>

  spec.required_ruby_version = "~> <%= RUBY_VERSION[/\d+\.\d+/] %>"
  <% if configuration.build_cli %>
    spec.add_dependency "runcom", "~> 7.0"
  <% end %>

  <% if configuration.build_cli %>
    spec.bindir = "exe"
    spec.executables << "<%= configuration.project_name %>"
  <% end %>
  spec.extra_rdoc_files = Dir["README*", "LICENSE*"]
  spec.files = Dir["lib/**/*"]
  spec.require_paths = ["lib"]
end
